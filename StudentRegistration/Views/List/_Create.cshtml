@model StudentRegistration.ViewModel.TblCountryViewModel


<section>
    @{
        string actionName;
        if (Model.CId != 0)
        {
            actionName = "EditCountry";
        }
        else
        {
            actionName = "CreateCountry";
        }
    }
    <form asp-action="@actionName" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                @Html.HiddenFor(x =>x.CId)


                <div class="modal fade" id="addMenu" style="background-color: #00000094;">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="addMenu">
                                    @{
                                        if (actionName == "EditCountry")
                                        {
                                            <h4> Edit Country</h4>
                                        }
                                        else
                                        {
                                            <h4> Add Country</h4>
                                        }
                                    }
                                </h4>
                                <button type="button" class="close" data-bs-dismiss="modal">
                                    <span class="btn btn-danger">x</span>
                                </button>

                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="CName" class="control-label"></label>
                                            <input asp-for="CName" class="form-control" />
                                            <span asp-validation-for="CName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    @if (Model.CId != 0)
                                    {
                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal" onClick="refreshPage()"><i class="bi bi-x-circle"></i>&nbspClose</button>
                                        <button type="submit" value="Update" class="btn btn-primary"><i class="bi bi-pencil"></i>&nbspUpdate</button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal" onClick="refreshPage()"><i class="bi bi-x-circle"></i>&nbspClose</button>
                                        <button type="submit" value="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i>&nbspCreate</button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-2"></div>
        </div>
    </form>

</section>
<script src="~/js/site.js"></script>














