@model StudentRegistration.ViewModel.StudentViewModel


<section>
    @{
        string actionName;
        if (Model.Student_Id != 0)
        {
            actionName = "Edit";
        }
        else
        {
            actionName = "Create";
        }
    }
    <form asp-action="@actionName" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                @Html.HiddenFor(x =>x.Student_Id)

                <input type="hidden" value="@Model.CId" class="hdnCId" />
                <input type="hidden" value="@Model.SId" class="hdnSId" />
                <input type="hidden" value="@Model.DId" class="hdnDId" />

                <div class="modal fade" id="addMenu" style="background-color: #00000094;">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title" id="addMenu">
                                    @{
                                        if (actionName == "Edit")
                                        {
                                            <h4> Edit Student</h4>
                                        }
                                        else
                                        {
                                            <h4> Add Student</h4>
                                        }
                                    }
                                </h4>
                                <button type="button" class="close" data-bs-dismiss="modal">
                                    <span class="btn btn-danger">x</span>
                                </button>

                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <level>CountryName</level>
                                            <select asp-for="CId" class="form-control" id="C1">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <level>StateName</level>
                                            <select asp-for="SId" class="form-control" id="S2">
                                            </select>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <level>CityName</level>
                                            <select asp-for="DId" class="form-control" id="D3">
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="Student_Name" class="control-label"></label>
                                            <input asp-for="Student_Name" class="form-control" />
                                            <span asp-validation-for="Student_Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="School_Name" class="control-label"></label>
                                            <input asp-for="School_Name" class="form-control" />
                                            <span asp-validation-for="School_Name" class="text-danger"></span>
                                        </div>
                                        <div class="multipleImage"></div>

                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="MobileNo" class="control-label"></label>
                                            <input asp-for="MobileNo" class="form-control" />
                                            <span asp-validation-for="MobileNo" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="Address" class="control-label"></label>
                                            <input asp-for="Address" class="form-control" />
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-group">
                                            <label asp-for="Standard_Class" class="control-label"></label>
                                            <input asp-for="Standard_Class" class="form-control" />
                                            <span asp-validation-for="Standard_Class" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label asp-for="Student_Image" class="control-label"></label>
                                            <input type="file" name="file" name="file" class="form-control"
                                                   onchange="document.getElementById('imageId').src = window.URL.createObjectURL(this.files[0])" />
                                            @{
                                                <img src="~/PICS/@Model.Student_Image" id="imageId" class="rectengle" width="120" height="80">
                                            }
                                            <span asp-validation-for="Student_Image" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    @if (Model.Student_Id != 0)
                                    {
                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal" onClick="refreshPage()"><i class="bi bi-x-circle"></i>&nbspClose</button>
                                        <button type="submit" value="Update" class="btn btn-primary"><i class="bi bi-pencil"></i>&nbspUpdate</button>
                                        @* <input type="submit" value="Update" class="btn btn-primary" />*@
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal" onClick="refreshPage()"><i class="bi bi-x-circle"></i>&nbspClose</button>
                                        <button type="submit" value="Create" class="btn btn-primary"> <i class="bi bi-plus-circle"></i>&nbspCreate</button>
                                        @* <input type="submit" value="Create" class="btn btn-primary" />*@
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-2"></div>
        </div>
    </form>

</section>
<script src="~/js/site.js"></script>














