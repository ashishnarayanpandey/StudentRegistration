@model StudentRegistration.ViewModel.StudentViewModel

@{
    ViewData["Title"] = "Index";
}

@*<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>*@
<div id="PlaceHolderHere"></div>
<section class="col-md-12">
    <div class="container">
        <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addMenu"
                data-url="@Url.Action("Create")">
            <i class="bi bi-plus-circle"></i>&nbspCreate
        </button>
       
       
        <h4>StudentList</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Student_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.School_Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MobileNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Standard_Class)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Student_Image)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DId)
                    </th>
                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListStudents)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.School_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MobileNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Standard_Class)
                        </td>
                        <td>
                            <img src="~/PICS/@item.Student_Image" class="rectengle" width="120" height="80">
                        </td>

                        <td>
                            @{
                                var country = Model.tblCountries.Where(x => x.CId == item.CId).Select(x => x.CName).FirstOrDefault();
                                <label>@country</label>
                            }
                        </td>
                        <td>
                            @{
                                var state = Model.tblStates.Where(x => x.SId == item.SId).Select(x => x.SName).FirstOrDefault();
                                <level>@state</level>
                            }
                        </td>
                        <td>
                            @{
                                var city = Model.tblCities.Where(x => x.DId == item.DId).Select(x => x.DName).FirstOrDefault();
                                <level>@city</level>
                            }
                        </td>
                        
                        <td>
                            <button type="button" class="btn btn-secondary" data-toggle="ajax-modal"
                                data-target="#addMenu" data-url="/Stud/Edit?id=@item.Student_Id">
                                <i class="bi bi-pencil"></i>&nbspEdit
                            </button> |
                           @* <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Student_Id">Edit</a> |*@
                            @*  <a asp-action="Details" asp-route-id="@item.Student_Id">Details</a> |*@
                            @* <a asp-action="Delete" asp-route-id="@item.Student_Id">Delete</a>*@
                            @Html.ActionLink("Delete","Delete",new { id = item.Student_Id },new {  @class ="btn btn-danger  bi bi-trash",onclick = "return confirm('Are you sure you wish to delete this article?')"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

